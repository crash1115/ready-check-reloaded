<div id="ready-check-app">
    <div class="info-container">
        <div class="status">{{readyUsers}} / {{onlineUsers}} players are ready.</div>
    </div>
    <div class="users-container">
        {{#each users as |user uid|}}
            <div class="user-card {{#if isOffline}}offline{{/if}} {{#if isReady}}ready{{/if}}">
                <div class="user-img">
                    <img src="{{user.img}}"/>
                </div>
                <div clas="user-name">{{user.name}}</div>
                <div class="user-status">
                    {{#if user.isReady}}Ready{{/if}}
                    {{#unless user.isReady}}
                        {{#if user.isOffline}}Offline{{else}}Not Ready{{/if}}
                    {{/unless}}
                    
                </div>
            </div>
        {{/each}}
    </div>
    
    <div class="controls">
        <button type="button" class="toggle-btn">
            {{#if isReady}}<i class="fas fa-times"></i> I'm Not Ready!
            {{else}}<i class="fas fa-check"></i> I'm Ready!
            {{/if}}
        </button>
        {{#if isGm}}
        <button type="button" class="end-btn"><i class="fas fa-check-to-slot"></i>End Ready Check</button>
        {{/if}}
    </div>

</div>